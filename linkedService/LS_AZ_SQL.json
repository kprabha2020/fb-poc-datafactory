{
	"name": "LS_AZ_SQL",
	"type": "Microsoft.DataFactory/factories/linkedservices",
	"properties": {
		"parameters": {
			"ServerName": {
				"type": "string"
			},
			"DatabaseName": {
				"type": "string"
			},
			"UserName": {
				"type": "string"
			},
			"PasswordSecret": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "AzureSqlDatabase",
		"typeProperties": {
			"connectionString": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=@{linkedService().ServerName};Initial Catalog=@{linkedService().DatabaseName};User ID=@{linkedService().UserName}",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "AZ_KeyVault",
					"type": "LinkedServiceReference"
				},
				"secretName": {
					"value": "@linkedService().PasswordSecret",
					"type": "Expression"
				}
			}
		}
	}
}